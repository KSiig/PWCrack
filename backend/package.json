{
	"name": "pwcrack-backend",
	"version": "0.1.0",
	"description": "NestJs backend for PWCrack",
	"contributors": [
		{
			"name": "Kasper Siig",
			"email": "kasper@siig.tech"
		},
		{
			"name": "Tina JÃ¸nsson"
		}
	],
	"license": "GPL-3.0-or-later",
	"bugs": "https://github.com/KSiig/PWCrack/issues",
	"repository": {
		"type": "git",
		"url": "https://github.com/KSiig/PWCrack"
	},
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "tslint -p tsconfig.json -c tslint.json",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"codecov": "codecov"
	},
	"dependencies": {
		"@nestjs/core": "^6.11.6",
		"@nestjs/common": "^6.11.6",
		"@nestjs/mongoose": "^6.3.1",
		"@nestjs/platform-express": "^6.11.6",
		"@types/fs-extra": "^8.0.1",
		"@types/mongoose": "^5.7.1",
		"@types/uuid": "^3.4.7",
		"class-transformer": "^0.2.3",
		"class-validator": "^0.11.0",
		"fs-extra": "^8.1.0",
		"mongoose": "^5.11.9",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^6.5.4",
		"util": "^0.12.1",
		"uuid": "^3.4.0"
	},
	"devDependencies": {
		"@nestjs/cli": "^6.14.2",
		"@nestjs/schematics": "^6.9.3",
		"@nestjs/testing": "^6.11.6",
		"@shelf/jest-mongodb": "^1.1.3",
		"@types/jest": "^25.1.2",
		"@types/express": "^4.17.2",
		"@types/node": "^13.7.1",
		"@types/supertest": "^2.0.8",
		"codecov": "^3.6.5",
		"jest": "^25.1.0",
		"prettier": "^1.19.1",
		"supertest": "^4.0.2",
		"ts-jest": "^25.2.0",
		"ts-loader": "^6.1.1",
		"ts-node": "^8.6.2",
		"tsconfig-paths": "^3.9.0",
		"tslint": "^6.0.0",
		"typescript": "^3.7.3"
	},
	"jest": {
		"preset": "@shelf/jest-mongodb",
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "./coverage",
		"testEnvironment": "node",
		"collectCoverageFrom": [
			"**/*.ts",
			"!**/node_modules/**",
			"!**/vendor/**",
			"!**/index.ts",
			"!**/main.ts"
		],
		"collectCoverage": true,
		"coverageThreshold": {
			"global": {
				"branches": 80,
				"functions": 80,
				"lines": 80,
				"statements": 80
			}
		}
	}
}
